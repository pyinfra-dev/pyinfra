{
    "args": ["kern.max-files", 2000],
    "kwargs": {
        "persist": true
    },
    "facts": {
        "server.Sysctl": {},
        "files.FindInFile": {
            "path=/etc/sysctl.conf, pattern=^.*kern.max-files[[:space:]]*=[[:space:]]*2000.*$": [],
            "path=/etc/sysctl.conf, pattern=^.*kern.max-files = 2000.*$": []
        }
    },
    "commands": [
        "sysctl kern.max-files='2000'",
        "echo 'kern.max-files = 2000' >> /etc/sysctl.conf"
    ]
}
