{
    "args": ["remote-host.net"],
    "kwargs": {
        "force": true
    },
    "facts": {
        "directory": {
            "~/.ssh": {
                "mode": 700
            }
        },
        "find_in_file": {
            "~/.ssh/known_hosts": {
                "remote-host.net": [true]
            }
        }
    },
    "commands": [
        "ssh-keygen -R remote-host.net",
        "ssh-keyscan -p 22 remote-host.net >> ~/.ssh/known_hosts"
    ],
    "idempotent": false
}
