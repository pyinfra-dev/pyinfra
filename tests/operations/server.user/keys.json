{
    "args": ["someuser"],
    "kwargs": {
        "home": "homedir",
        "public_keys": ["abc"]
    },
    "facts": {
        "server.Users": {
            "someuser": {
                "home": "homedir",
                "group": null,
                "groups": []
            }
        },
        "files.Directory": {
            "path=homedir": {
                "user": "someuser",
                "group": "someuser"
            },
            "path=homedir/.ssh": {
                "user": "someuser",
                "group": "someuser",
                "mode": 700
            }
        },
        "files.File": {
            "path=homedir/.ssh/authorized_keys": {
                "user": "someuser",
                "group": "someuser",
                "mode": 601
            }
        },
        "files.FindInFile": {
            "path=homedir/.ssh/authorized_keys, pattern=^.*abc.*$": []
        }
    },
    "commands": [
        "chmod 600 homedir/.ssh/authorized_keys",
        "echo abc >> homedir/.ssh/authorized_keys"
    ],
    "idempotent": false
}
