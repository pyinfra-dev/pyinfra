{
    "args": ["someuser"],
    "kwargs": {
        "home": "homedir",
        "shell": "shellbin",
        "group": "mygroup",
        "groups": ["secondary_group", "another"],
        "uid" : 1000,
        "system": true,
        "comment": "Full Name",
        "create_home": true
    },
    "facts": {
        "server.Os": "Linux",
        "server.Users": {},
        "server.Groups": {},
        "files.Directory": {
            "path=homedir": null
        },
        "server.Os": "Linux"
    },
    "commands": [
        "grep '^someuser:' /etc/passwd || useradd -d homedir -s shellbin -g mygroup -G secondary_group,another -r --uid 1000 -c 'Full Name' -m someuser",
        "mkdir -p homedir",
        "chown someuser:mygroup homedir"
    ]
}
