{
    "args": ["somefile", "match_line"],
    "kwargs": {
        "replace": "replace_line",
        "flags": "abc"
    },
    "facts": {
        "files.FindInFile": {
            "path=somefile, pattern=^.*match_line.*$": [
                "match_line"
            ]
        }
    },
    "commands": [
        "sed -i.a-timestamp 's/^.*match_line.*$/replace_line/abc' somefile && rm -f somefile.a-timestamp"
    ]
}
