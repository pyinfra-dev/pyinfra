{
    "args": ["myrepo", "/home/myrepo"],
    "kwargs": {
        "branch": "mybranch"
    },
    "facts": {
        "files.Directory": {
            "path=/home/myrepo": {},
            "path=/home/myrepo/.git": {
                "mode": 0
            }
        },
        "git.GitBranch": {
            "repo=/home/myrepo": "master"
        }
    },
    "commands": [
        "cd /home/myrepo && git fetch",
        "cd /home/myrepo && git checkout mybranch",
        "cd /home/myrepo && git pull"
    ],
    "idempotent": false
}
