{
    "args": ["myrepo", "/home/myrepo"],
    "kwargs": {
        "branch": "mybranch"
    },
    "facts": {
        "directory": {
            "/home/myrepo": {},
            "/home/myrepo/.git": {
                "mode": 0
            }
        },
        "git_branch": {
            "/home/myrepo": "master"
        }
    },
    "commands": [
        "cd /home/myrepo && git fetch",
        "cd /home/myrepo && git checkout mybranch",
        "cd /home/myrepo && git pull"
    ],
    "idempotent": false
}
