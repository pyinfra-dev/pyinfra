{
    "args": ["git@github.com:Fizzadar/pyinfra", "/home/myrepo"],
    "kwargs": {
        "branch": "mybranch",
        "ssh_keyscan": true
    },
    "facts": {
        "directory": {
            "/home/myrepo": {},
            "/home/myrepo/.git": null,
            "~/.ssh": {
                "mode": 700
            }
        },
        "find_in_file": {
            "~/.ssh/known_hosts": {
                "github.com": []
            }
        }
    },
    "commands": [
        "ssh-keyscan -p 22 github.com >> ~/.ssh/known_hosts",
        "cd /home/myrepo && git clone git@github.com:Fizzadar/pyinfra --branch mybranch ."
    ],
    "idempotent": false
}
