{
    "args": ["myrepo", "/home/myrepo"],
    "kwargs": {
        "update_submodules": true
    },
    "facts": {
        "directory": {
            "/home/myrepo": {},
            "/home/myrepo/.git": {
                "mode": 0
            }
        },
        "git_branch": {
            "/home/myrepo": "master"
        }
    },
    "commands": [
        "cd /home/myrepo && git pull",
        "cd /home/myrepo && git submodule update --init"
    ],
    "idempotent": false
}
