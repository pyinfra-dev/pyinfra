{
    "args": ["myrepo", "/home/myrepo"],
    "kwargs": {
        "branch": "mybranch",
        "user": "pyinfra"
    },
    "facts": {
        "directory": {
            "/home/myrepo": {},
            "/home/myrepo/.git": null
        }
    },
    "commands": [
        "cd /home/myrepo && git clone myrepo --branch mybranch .",
        "chown -R pyinfra /home/myrepo"
    ]
}
