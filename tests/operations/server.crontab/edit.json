{
    "args": ["this_is_a_command"],
    "kwargs": {
        "month": 1
    },
    "facts": {
        "crontab": {
            "this_is_a_command": {
                "minute": "*",
                "hour": "*",
                "month": "*",
                "day_of_week": "*",
                "day_of_month": "*",
                "comments": []
            }
        }
    },
    "commands": [
        "crontab -l  > _tempfile_",
        "sed -i=\"\" \"s/.*this_is_a_command.*/* * * 1 * this_is_a_command/\" _tempfile_",
        "crontab  _tempfile_"
    ]
}
