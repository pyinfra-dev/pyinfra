{
    "args": ["somefile.txt", "/home/somefile.txt"],
    "kwargs": {
        "user": "testuser",
        "group": "testgroup",
        "create_remote_dir": true
    },
    "files": ["somefile.txt"],
    "facts": {
        "file": {
            "/home/somefile.txt": null
        },
        "directory": {
            "/home": null
        }
    },
    "commands": [
        "mkdir -p /home",
        "chown testuser:testgroup /home",
        ["upload", "/somefile.txt", "/home/somefile.txt"],
        "chown testuser:testgroup /home/somefile.txt"
    ],
    "idempotent": false
}
