{
    "args": ["remote-host.net", "remote_filename", "local_filename"],
    "kwargs": {
        "ssh_user": "nick",
        "ssh_keyscan": true
    },
    "facts": {
        "directory": {
            "~/.ssh": {
                "mode": 700
            }
        },
        "file": {
            "local_filename": null
        },
        "find_in_file": {
            "~/.ssh/known_hosts": {
                "remote-host.net": [true]
            }
        }
    },
    "commands": [
        "scp -P 22 nick@remote-host.net:remote_filename local_filename"
    ],
    "idempotent": false
}
