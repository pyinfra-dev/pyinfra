{
    "args": ["http://myfile"],
    "kwargs": {
        "dest": "/home/myfile",
        "group": "mygroup",
        "mode": 777
    },
    "facts": {
        "server.Date": "datetime:2015-01-01T00:00:00",
        "files.File": {
            "path=/home/myfile": null
        },
        "server.Which": {
            "command=curl": "yes"
        }
    },
    "commands": [
        "curl -sSLf http://myfile -o /home/myfile",
        "chgrp mygroup /home/myfile",
        "chmod 777 /home/myfile"
    ]
}
