{
    "args": ["http://myfile"],
    "kwargs": {
        "dest": "/home/myfile",
        "group": "mygroup",
        "mode": 777
    },
    "facts": {
        "file": {
            "/home/myfile": null
        },
        "which": {
            "curl": "yes"
        }
    },
    "commands": [
        "curl -sSLf 'http://myfile' -o /home/myfile",
        "chgrp mygroup /home/myfile",
        "chmod 777 /home/myfile"
    ],
    "idempotent": false
}
