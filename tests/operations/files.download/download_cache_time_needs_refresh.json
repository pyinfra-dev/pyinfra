    "kwargs": {
        "dest": "/home/myfile",
        "cache_time": 3600
    },
    "facts": {
        "server.Date": "datetime:2015-01-01T02:00:00",
        "files.File": {
            "path=/home/myfile": {
                "mtime": "datetime:2015-01-01T00:00:00"
            }
        },
        "server.Which": {
