{
    "args": ["key", "value"],
    "kwargs": {
        "repo": "/my/repo"
    },
    "facts": {
        "git.GitConfig": {
            "repo=/my/repo": {
                "another_key": "value"
            }
        },
        "files.Directory": {
            "path=/my/repo/.git": true
        }
    },
    "commands": [
        "cd /my/repo && git config --local key \"value\""
    ]
}
