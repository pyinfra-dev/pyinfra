{
    "args": ["filename", "match", "replace"],
    "kwargs": {
        "flags": ["g", "i"],
        "interpolate_variables": false
    },
    "facts": {
        "find_in_file": {
            "filename": {
                "match": ["matching line"]
            }
        }
    },
    "commands": [
        "sed -i.a-timestamp 's/match/replace/gi' filename && rm -f filename.a-timestamp"
    ],
    "idempotent": false
}
