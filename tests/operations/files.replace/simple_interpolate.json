{
    "args": ["filename", "match", "replace"],
    "kwargs": {
        "flags": ["g", "i"],
        "interpolate_variables": true
    },
    "facts": {
        "files.FindInFile": {
            "path=filename, pattern=match": ["matching line"]
        }
    },
    "commands": [
        "sed -i.a-timestamp \"s/match/replace/gi\" filename && rm -f filename.a-timestamp"
    ]
}
