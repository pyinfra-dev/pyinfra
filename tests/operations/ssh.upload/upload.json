{
    "args": ["remote-host.net", "local_filename"],
    "kwargs": {
        "ssh_user": "nick",
        "ssh_keyscan": true
    },
    "facts": {
        "directory": {
            "~/.ssh": {
                "mode": 700
            }
        },
        "find_in_file": {
            "~/.ssh/known_hosts": {
                "remote-host.net": [true]
            }
        }
    },
    "commands": [
        "scp -P 22 local_filename nick@remote-host.net:local_filename"
    ],
    "idempotent": false
}
